<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="za.co.openwindow.civilbank.controller.ViewAccountDetailController"
            stylesheets="/styles/main.css"
            styleClass="content"
            prefHeight="400.0" prefWidth="600.0"
>

    <fx:include source="MenuBar.fxml"
                fx:id="menuBar"
                AnchorPane.leftAnchor="0"
                AnchorPane.rightAnchor="0"
                AnchorPane.topAnchor="0" />

    <GridPane AnchorPane.topAnchor="40"
              AnchorPane.leftAnchor="10"
              AnchorPane.rightAnchor="10"
              AnchorPane.bottomAnchor="10"
    >

        <columnConstraints>
            <ColumnConstraints percentWidth="8.3" />
            <ColumnConstraints percentWidth="8.3" />
            <ColumnConstraints percentWidth="8.3" />
            <ColumnConstraints percentWidth="8.3" />
            <ColumnConstraints percentWidth="8.3" />
            <ColumnConstraints percentWidth="8.3" />
            <ColumnConstraints percentWidth="8.3" />
            <ColumnConstraints percentWidth="8.3" />
            <ColumnConstraints percentWidth="8.3" />
            <ColumnConstraints percentWidth="8.3" />
            <ColumnConstraints percentWidth="8.3" />
            <ColumnConstraints percentWidth="8.3" />
        </columnConstraints>

        <rowConstraints>
            <RowConstraints percentHeight="8.3" />
            <RowConstraints percentHeight="8.3" />
            <RowConstraints percentHeight="8.3" />
            <RowConstraints percentHeight="8.3" />
            <RowConstraints percentHeight="8.3" />
            <RowConstraints percentHeight="8.3" />
            <RowConstraints percentHeight="8.3" />
            <RowConstraints percentHeight="8.3" />
            <RowConstraints percentHeight="8.3" />
            <RowConstraints percentHeight="8.3" />
            <RowConstraints percentHeight="8.3" />
            <RowConstraints percentHeight="8.3" />
        </rowConstraints>

        <Label GridPane.columnIndex="0"
               GridPane.columnSpan="6"
               GridPane.rowIndex="0"
               GridPane.rowSpan="1"
        >
            Name:
        </Label>
        <Label fx:id="accountNameLabel"
               GridPane.columnIndex="6"
               GridPane.columnSpan="6"
               GridPane.rowIndex="0"
               GridPane.rowSpan="1"
        >
            Name
        </Label>

        <Label GridPane.columnIndex="0"
               GridPane.columnSpan="6"
               GridPane.rowIndex="1"
               GridPane.rowSpan="1"
        >

        </Label>

        <VBox fx:id="accountVBox"
              AnchorPane.topAnchor="60"
              AnchorPane.leftAnchor="10"
              AnchorPane.bottomAnchor="10"
              AnchorPane.rightAnchor="10"
        >
        </VBox>

        <Button fx:id="depositButton"

                GridPane.columnIndex="0"
                GridPane.columnSpan="12"
                GridPane.rowIndex="11"
                GridPane.rowSpan="1"
        >
            Deposit
        </Button>

        <Button fx:id="withdrawButton"

                GridPane.columnIndex="2"
                GridPane.columnSpan="12"
                GridPane.rowIndex="11"
                GridPane.rowSpan="1"
        >
            Withdraw
        </Button>

        <Button fx:id="doneButton"
                onAction="#done"
                GridPane.columnIndex="9"
                GridPane.columnSpan="12"
                GridPane.rowIndex="11"
                GridPane.rowSpan="1"
        >
            Done
        </Button>

    </GridPane>

</AnchorPane>
