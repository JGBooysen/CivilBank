<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="za.co.openwindow.civilbank.controller.SearchClientController"
            prefHeight="400.0" prefWidth="600.0">

    <fx:include source="MenuBar.fxml"
                fx:id="menuBar"
                AnchorPane.leftAnchor="0"
                AnchorPane.rightAnchor="0"
                AnchorPane.topAnchor="0" />

    <GridPane AnchorPane.topAnchor="40"
              AnchorPane.leftAnchor="10"
              AnchorPane.rightAnchor="10"
              AnchorPane.bottomAnchor="10">

        <columnConstraints>
            <ColumnConstraints percentWidth="8.3" />
            <ColumnConstraints percentWidth="8.3" />
            <ColumnConstraints percentWidth="8.3" />
            <ColumnConstraints percentWidth="8.3" />
            <ColumnConstraints percentWidth="8.3" />
            <ColumnConstraints percentWidth="8.3" />
            <ColumnConstraints percentWidth="8.3" />
            <ColumnConstraints percentWidth="8.3" />
            <ColumnConstraints percentWidth="8.3" />
            <ColumnConstraints percentWidth="8.3" />
            <ColumnConstraints percentWidth="8.3" />
            <ColumnConstraints percentWidth="8.3" />
        </columnConstraints>

        <rowConstraints>
            <RowConstraints percentHeight="8.3" />
            <RowConstraints percentHeight="8.3" />
            <RowConstraints percentHeight="8.3" />
            <RowConstraints percentHeight="8.3" />
            <RowConstraints percentHeight="8.3" />
            <RowConstraints percentHeight="8.3" />
            <RowConstraints percentHeight="8.3" />
            <RowConstraints percentHeight="8.3" />
            <RowConstraints percentHeight="8.3" />
            <RowConstraints percentHeight="8.3" />
            <RowConstraints percentHeight="8.3" />
            <RowConstraints percentHeight="8.3" />
        </rowConstraints>

        <Label GridPane.columnIndex="0"
               GridPane.columnSpan="6"
               GridPane.rowIndex="0"
               GridPane.rowSpan="1"
        >
            Name or ID:
        </Label>
        <TextField fx:id="searchTextField"
                   GridPane.columnIndex="6"
                   GridPane.columnSpan="6"
                   GridPane.rowIndex="0"
                   GridPane.rowSpan="1"
        >

        </TextField>

        <Button fx:id="searchButton"
                onAction="#searchClient"
                GridPane.columnIndex="6"
                GridPane.columnSpan="6"
                GridPane.rowIndex="11"
                GridPane.rowSpan="1"
        >
            Search Client
        </Button>

        <Button fx:id="backButton"
                onAction="#goBack"
                GridPane.columnIndex="0"
                GridPane.columnSpan="12"
                GridPane.rowIndex="11"
                GridPane.rowSpan="1"
        >
            Back
        </Button>



    </GridPane>




</AnchorPane>
